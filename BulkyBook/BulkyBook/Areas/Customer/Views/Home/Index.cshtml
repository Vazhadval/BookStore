@model IEnumerable<Product>


<div class="row pb-3 backgroundWhite">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12  p-1" style="border:1px solid #008cba; border-radius: 5px;">
                    <div class="card" style="border:0px;">
                        <img src="@product.ImageUrl" class="card-img-top rounded" height="250" />
                        <div class="pl-1">
                            @if (product.Title.Length > 20)
                            {
                                <p class="card-title h5"><b style="color:#fff">@product.Title.Substring(0, 20). . .</b></p>

                            }
                            else
                            {
                                <p class="card-title h5"><b style="color:#fff">@product.Title</b></p>
                            }
                            <p class="card-title text-primary"><b style="color:#fff">@product.Author</b></p>
                        </div>
                        <div style="padding-left:5px;">
                            <p style="color:orange">List Price: <strike><b class="">@product.ListPrice.ToString("0.00")</b></strike></p>
                        </div>
                        <div style="padding-left:5px;">
                            <p style="color:green">As low as: <b class="">@product.Price100.ToString("0.00")</b></p>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary form-control">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }

</div>